      "nodes": [
        {
          "id": "0",
          "ns": "mongojs",
          "name": "db",
          "context": {
            "connectionString": "chix-test"
          }
        },
        {
          "id": "1",
          "ns": "mongojs",
          "name": "collection",
          "context": {
            "collection": "test"
          }
        },
        {
          "id": "2",
          "ns": "mongojs",
          "name": "remove"
        }
      ],
      "links": [
        {
          "source": "0",
