          "name": "criteria",
          "context": {
            "criteria": "{}"
          }
        },
        {
          "id": "3",
          "ns": "mongojs",
          "name": "find"
        }
      ],
      "links": [
        {
          "source": "0",
          "target": "1",
          "out": "db",
          "in": "db"
        },
        {
          "source": "1",
